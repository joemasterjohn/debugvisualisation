<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.debug.ui"
            class="hu.cubussapiens.debugvisualisation.views.DebugVisualisationView"
            icon="icons/icon.png"
            id="hu.cubussapiens.debugvisualisation.views.DebugVisualisationView"
            name="Debug Visualisation View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="hu.cubussapiens.debugvisualisation.category"
            id="hu.cubussapiens.debugvisualisation.showlocalcontext"
            name="Display Local Context">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <category
            id="hu.cubussapiens.debugvisualisation.category"
            name="Debug Visualisation">
      </category>
      <command
            id="hu.cubussapiens.debugvisualisation.availablelogicalstructures"
            name="&amp;Show Structure As">
      </command>
      <command
            categoryId="hu.cubussapiens.debugvisualisation.category"
            id="hu.cubussapiens.debugvisualisation.visualisevariable"
            name="Add Variable to Visualisaton">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hu.cubussapiens.debugvisualisation.views.actions.ShowLocalContextHandler"
            commandId="hu.cubussapiens.debugvisualisation.showlocalcontext">
      </handler>
      <handler
            class="hu.cubussapiens.debugvisualisation.views.actions.VisualiseVariableHandler"
            commandId="hu.cubussapiens.debugvisualisation.visualisevariable">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     operator="or">
                  <instanceof
                        value="org.eclipse.debug.core.model.IVariable">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:hu.cubussapiens.debugvisualisation.views.DebugVisualisationView">
         <command
               commandId="hu.cubussapiens.debugvisualisation.showlocalcontext"
               label="Show Local Context Node"
               style="toggle">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:hu.cubussapiens.debugvisualisation.views.DebugVisualisationView">
         <menu
               label="Show Structure As">
            <dynamic
                  class="hu.cubussapiens.debugvisualisation.views.actions.AvailableStructures"
                  id="hu.cubussapiens.debugvisualisation.dynamic1">
            </dynamic>
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                  </with>
                  <with
                        variable="selection">
                    <iterate>
                        <instanceof
                              value="hu.cubussapiens.debugvisualisation.internal.model.IDVValue">
                        </instanceof>
                        <test
                              property="hu.cubussapiens.debugvisualisation.logicalstructure">
                        </test>
                     </iterate>
                  </with>
               </and>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.debug.ui.VariableView">
         <command
               commandId="hu.cubussapiens.debugvisualisation.visualisevariable"
               label="Add Variable to Visualisation"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="hu.cubussapiens.debugvisualisation.internal.model.util.LogicalStructuresTester"
            id="hu.cubussapiens.debugvisualisation.structureavailable"
            namespace="hu.cubussapiens.debugvisualisation"
            properties="logicalstructure"
            type="hu.cubussapiens.debugvisualisation.internal.model.IDVValue">
      </propertyTester>
   </extension>

</plugin>
