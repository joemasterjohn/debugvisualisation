<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="hu.cubussapiens.debugvisualisation.filterproviders" name="Filter providers for the debug visualisation plugin" schema="schema/hu.cubussapiens.debugvisualisation.filterproviders.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.debug.ui"
            class="hu.cubussapiens.debugvisualisation.views.DebugVisualisationView"
            icon="icons/icon.png"
            id="hu.cubussapiens.debugvisualisation.views.DebugVisualisationView"
            name="Debug Visualisation View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="hu.cubussapiens.debugvisualisation.category"
            id="hu.cubussapiens.debugvisualisation.showlocalcontext"
            name="Display Local Context">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <category
            id="hu.cubussapiens.debugvisualisation.category"
            name="Debug Visualisation">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hu.cubussapiens.debugvisualisation.views.actions.ShowLocalContextHandler"
            commandId="hu.cubussapiens.debugvisualisation.showlocalcontext">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:hu.cubussapiens.debugvisualisation.views.DebugVisualisationView">
         <command
               commandId="hu.cubussapiens.debugvisualisation.showlocalcontext"
               label="Show Local Context Node"
               style="toggle">
         </command>
      </menuContribution>
   </extension>

</plugin>
